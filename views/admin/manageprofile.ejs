<%- include('../admininclude/head.ejs') %>
    <div class="container-fluid">

        <!-- Page Heading -->


        <!-- DataTales Example -->
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Change admin login</h1>
                                <% if (errorMessage) { %>
                                    <p class="mb-4" style="color: crimson;">
                                        <%= errorMessage %>
                                    </p>
                                    <% } %>
                            </div>
                            <form action="/controller/manageprofile" method="POST" id="addloading">

                                <div class="form-group row">
                                    <div class="col-sm-12 mb-3 mb-sm-0">
                                        <input tabindex="4" required type="text" name="name" class="form-control form-control-user" id="exampleFirstName" placeholder="User name">
                                    </div>

                                </div>

                                <div class="form-group ">
                                    <input tabindex="5" required type="password" name="password" class="form-control form-control-user col-sm-102mb-3 mb-sm-0" id="exampleInputEmail" placeholder="Enter password">
                                </div>






                                <button type="submit" form="addloading" class="btn btn-primary btn-user btn-block col-sm-12 mb-3 mb-sm-0 ">
    Login
  </button>
                                <hr>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <%- include('../admininclude/end.ejs') %>